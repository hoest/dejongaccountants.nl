@import 'jeet'
@import '_settings'

normalize-css()
base()

body
  background-color $light_gray
  font-family $normal

h1, h2, h3
  font-family $condensed
  text-transform uppercase
  margin-top 0

a, h1, h2, h3
  color $dark_blue

a
  text-decoration none

  &:hover
    text-decoration underline

.contact, header, main, footer
  center()
  display block
  background-color $white
  padding .5rem 1rem

  +above(600px)
    max-width 980px

.contact-wrapper
  fixed()
  width 100%

  .contact
    background-color $darker_gray
    text-transform uppercase
    bold()
    font-family $condensed

    .menu-icon
      col(1/9)
      text-align right

    .belons
      col(8/9)
      margin-right 0

    .mailons
      display none

    +above(600px)
      .menu-icon
        display none

      .mailons
        display block

      .belons, .mailons
        col(1/2)

    .mailons
      text-align right

header
  padding-top 2.4rem
  background-position 0 2.4rem
  background-size cover
  background-image url('../images/dejong-banner.jpg')
  background-repeat no-repeat

  h1
    display inline

    span
      display none

    .dejong-logo
      col(1/1)

    +above(600px)
      span
        col(2/3)
        visibility hidden
        display block

      .dejong-logo
        col(1/3)

main
  border-top 1px solid $light_gray
  border-bottom 1px solid $light_gray

  aside
    +below(600px)
      display none
      background-color $light_gray
      position absolute
      width calc(100% - 2rem)
      top 2.4rem
      left 0
      padding 1rem

    h2
      display none

    nav
      +above(600px)
        display block

      ul
        list-style none
        padding 0
        margin 0

        li
          margin .3rem 0
          margin 0

        +above(600px)
          li
            margin .3rem 0

          a
            glossy-button $dark_blue
            font-family $condensed
            font-size 1.2rem
            display block

            &:hover
              text-decoration none

footer
  text-align center
  font-size .8rem

+above(600px)
  aside
    col(1/3)

  section
    col(2/3)
