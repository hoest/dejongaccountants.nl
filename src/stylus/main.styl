@import 'jeet'
@import '_settings'

normalize-css()
base()

body
  background-color $light_gray
  font-family $normal

h1, h2, h3
  font-family $condensed
  text-transform uppercase
  margin-top 0

a, h1, h2, h3
  color $dark_blue

a
  text-decoration none

  &:hover
    text-decoration underline

.contact, header, main, footer
  center()
  display block
  padding .5rem 1rem
  z-index 5
  position relative

  +above(600px)
    max-width 980px

main, footer
  background-color $white

.contact-wrapper
  fixed()
  width 100%
  z-index 15

  .contact
    background-color $darker_gray
    text-transform uppercase
    bold()
    font-family $condensed

    .menu-icon
      col(1/9)
      text-align right

    .belons
      col(6/9)
      margin-right 0

    .social
      col(2/9)
      text-align right

    .mailons
      display none

    .advies
      display inline-block
      margin-left 1em
      padding-left 1em
      border-left 1px solid #004a99

    .social-icon
      display inline-block
      text-align center
      width 1.5em

    +above(600px)
      .menu-icon, .social
        display none

      .mailons
        display block

      .belons
        col(1/2)

      .mailons
        col(1/2)

    .mailons
      text-align right

header
  padding-top 2.4rem

  +above(600px)
    height 320px

  h1
    display inline

    span
      display none

    .dejong-logo
      col(1/1)

    +above(600px)
      span
        col(2/3)
        visibility hidden
        display block

      .dejong-logo
        col(1/3)

main
  border-top 1px solid $light_gray
  border-bottom 1px solid $light_gray

  aside
    +below(600px)
      display none
      background-color $light_gray
      position absolute
      width calc(100% - 2rem)
      top 2.4rem
      left 0
      padding 1rem

    .widget-container
      display none

      +above(600px)
        display block
        margin-top 2rem

    .widget_rss
      h2, ul
        margin 0

      ul
        padding-left 0
        font-size .9rem
        list-style none

        li
          margin-bottom: .5rem

      .rsswidget
        img
          display none

      li a.rsswidget, .rss-date
          display block

      .rss-date
        font-size .8rem

    nav
      +above(600px)
        display block

      h2
        display none

      ul
        list-style none
        padding 0
        margin 0

        li
          margin .3rem 0
          margin 0

        +above(600px)
          li
            margin .3rem 0

          a
            glossy-button $dark_blue
            font-family $condensed
            font-size 1.2rem
            display block

            &:hover
              text-decoration none

    .aa_btn
      display none

      +above(600px)
        display block
        text-align center
        margin-top 2rem
        margin-bottom 1rem

footer
  text-align center
  font-size .8rem

  ul.menu
    list-style none

    li
      display inline-block

      &:after
        content ' - '

      &:last-child:after
        content ''


  .aa_btn
    display block
    text-align center
    margin-top 1rem
    margin-bottom 1rem

    +above(600px)
      display none

.banner
  display none

+above(600px)
  .banner
    center()
    fixed()
    opacity .5
    z-index 1
    width 100%
    height 100%
    background-image url('./images/dejong-foto-banner-bw.jpg')
    background-repeat no-repeat

  aside
    col(1/3)

  section
    col(2/3)
